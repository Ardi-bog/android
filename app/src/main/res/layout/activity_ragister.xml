<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".login"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:id="@+id/ilustrasi"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_below="@+id/sign_up"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="147dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ikon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.943"
        tools:ignore="NotSibling,UnknownId" />

    <EditText
        android:id="@+id/email"
        android:layout_below="@id/ilustrasi"
        android:hint="Email"
        android:backgroundTint="#f1f2f6"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/pesawat"
        android:fontFamily="@font/sulphurpoint"
        android:textColorHint="#212020"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/form_login"
        android:elevation="10dp"
        />

    <EditText
        android:id="@+id/pass"
        android:layout_below="@id/email"
        android:hint="Password"
        android:backgroundTint="#f1f2f6"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/padlock"
        android:fontFamily="@font/sulphurpoint"
        android:textColorHint="#212020"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/form_login"
        android:elevation="10dp" />

    <EditText
        android:id="@+id/pass2"
        android:layout_below="@id/pass"
        android:hint="Confirm Password"
        android:backgroundTint="#f1f2f6"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/padlock"
        android:fontFamily="@font/sulphurpoint"
        android:textColorHint="#212020"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/form_login"
        android:elevation="10dp" />

    <LinearLayout
        android:id="@+id/teks"
        android:layout_below="@+id/pass2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_below="@id/text_input_password_toggle"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="@font/sulphurpoint"
            android:text="Do you have any account? "
            android:textColor="#212020"
            />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/text_input_password_toggle"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:fontFamily="@font/sulphurpoint"
            android:text="Log In"
            android:textColor="#FDC840" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_reg"
        android:layout_below="@id/teks"
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="235dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="#fff"
        android:src="@drawable/bjir" />

</RelativeLayout>